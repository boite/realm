<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    </head>
    <style>
        .buttonbox {
            margin-top: 10px;
            text-align: right;
            background-color: #f0f0f0;
            border-color: #808080;
            padding: 10px;
            border-radius: 5px;
        }
    </style>
    <body>
        <div class="container">
            <h1>Realm viewer</h1>
            {% if project is defined %}
            <h2>Project: {{ project.getId }}</h2>
            <a href="/{{ project.getId }}">Home</a> | 
            <a href="/{{ project.getId }}/concepts">Concepts</a> |
            <a href="/{{ project.getId }}/codelists">Codelists</a>
            <br />
            {% endif %}
            <hr />
            {% block content %}{% endblock %}
            <hr style="margin-top: 100px;"/>
        </div>
    </body>
</html>
